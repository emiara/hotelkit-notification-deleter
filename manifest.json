{
  "manifest_version": 3,
  "name": "Hotelkit Notification Deleter",
  "version": "1.1.0",
  "background": {
    "service_worker": "./dist/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "./assets/action_icon.png",
    "default_popup": "./dist/popup.html"
  },
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "https://*.hotelkit.net/*"
  ]
}
